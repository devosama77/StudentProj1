<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/background_whiteBlue"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="@drawable/layout_corner_white"
        >
        <TextView
            android:id="@+id/text_view_question_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السؤال الاول ؟"
            android:textSize="20dp"
            android:padding="8dp"
            android:textColor="@color/black"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاجابة الاولى"
            android:textSize="17dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/checkbox_q_show_answer1"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاجابة الثانيه"
            android:textSize="17dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"

            android:id="@+id/checkbox_q_show_answer2"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاجابة الثالثه"
            android:textSize="17dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"

            android:id="@+id/checkbox_q_show_answer3"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الاجابة الرابعه"
            android:textSize="17dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:id="@+id/checkbox_q_show_answer4"/>

    </LinearLayout>

</android.support.v7.widget.CardView>